<form method="post" action="{{ path('content_delete', {'id': content.id}) }}" onsubmit="return confirm('Wollen Sie den Eintrag wirklich löschen?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ content.id) }}">
    <button class="btn btn-danger btn-right">Löschen</button>
</form>
